<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsClientActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:text="Nome Completo:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="nome"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:text="Apelido:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="username"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtNome" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:layout_marginTop="4dp"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:text="Endereço:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName" />

    <TextView
        android:id="@+id/txtAdress"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="endereço"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:layout_marginTop="4dp"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtAdress" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="email"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtAdress" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:layout_marginTop="4dp"
        android:text="Data de Nascimento:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="data de nascimento"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:layout_marginTop="4dp"
        android:text="Documento:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <TextView
        android:id="@+id/txtCpfOrCnpj"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="4dp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="Documento"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:text="Genêro:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtCpfOrCnpj" />

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="150sp"
        android:paddingEnd="5sp"
        android:text="Genêro"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtCpfOrCnpj" />


    <TextView
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_weight="2"
        android:gravity="center|start"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"
        android:text="Foto de Perfil:"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtGender" />

    <ImageView
        android:id="@+id/imageViewDetails"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_myplaces"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGender"
        app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>